<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>All Users - Mini Tweet App</title>
  <link rel="stylesheet" href="showallusers.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
  <div class="wrapper">
    <header>
      <h1><i class="fas fa-users"></i> All Users</h1>
      <div class="action-btns top-btns">
        <a href="/users/new" class="btn green"><i class="fas fa-user-plus"></i> Add New User</a>
        <a href="/" class="btn blue"><i class="fas fa-home"></i> Back to Home</a>
      </div>
    </header>

    <div class="users-container">
      <% for (let user of userdata) { %>
        <div class="user-card">
          <p><i class="fas fa-id-badge"></i> <strong>ID:</strong> <%= user.id.slice(0,8) %>...</p>
          <p><i class="fas fa-user"></i> <strong>Username:</strong> <%= user.username %></p>
          <p><i class="fas fa-envelope"></i> <strong>Email:</strong> <%= user.email %></p>
          <p><i class="fas fa-comment"></i> <strong>Content:</strong> <%= user.content %></p>
          
          <div class="user-actions">
            <a href="/users/<%= user.id %>/edit" class="btn blue"><i class="fas fa-edit"></i> Edit</a>
            <a href="/users/<%= user.id %>/delete" class="btn red"><i class="fas fa-trash-alt"></i> Delete</a>
            <a href="/users/<%= user.id %>" class="btn gray"><i class="fas fa-eye"></i> See Details</a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
